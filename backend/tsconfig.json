{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "types": ["node", "mocha"]
  },
  "include": ["hardhat.config.ts", "./deploy", "./scripts", "./test", "./tasks", "./types"],
  "exclude": ["node_modules", "dist"]
}


